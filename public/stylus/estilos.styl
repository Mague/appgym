@import "nib"
@import "components/left-sidebar.styl"
body
  margin: 50px 0 0 0
  padding: 0
  width: 100%
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
  text-align: center
  color: #aaa
  font-size: 18px
  margin 0
  // background-color:#f5f5f5
  background: linear-gradient(top, white, black);

h1
  color: #719e40
  letter-spacing: -3px
  font-family: 'Lato', sans-serif
  font-size: 100px
  font-weight: 200
  margin-bottom: 0

.top
  overflow:hidden
  padding:1vh
  background-color:rgba(255,255,255,1)

.tit-top
  float:left
  color:#EB3288;
  font-size:4vh

.cont-content
  float:right
  width:80%
  background-color:white
  padding:2vh
  margin:2vh

.ajuste
  width:100%
  padding:0px
  margin:0px
  overflow:hidden

.menu ul
  margin:0px
  padding:0px
  list-style:none

.menu ul li
  padding:0px
  margin:0px

.btn-menu
  background-color:red
  display:block
  padding:2vh 2.5vh

.btn1
  position relative
  border:none;
  border-radius:1px 4px 1px 4px;
  color:white;
  font-weight:bold;
  border-bottom:4px solid #2C8C92;
  border-right:4px solid #2C8C92;
  font-size:16px;
  padding:15px 40px;
  background-color: #3AB0B8;

.btn1:hover
  background-color #48C3CB
  border-bottom:2px solid #2C8C92;
  border-right:2px solid #2C8C92;
  border-radius:1px 2px 1px 2px;

.btn1:active
  box-shadow inset 0px 0px 30px rgba(0,0,0,0.15)
  
.cont-btn1
  height:60px;