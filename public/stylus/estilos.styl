@import "nib"
@import "components/left-sidebar.styl"
body
  padding: 0
  width: 100%
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
  text-align: center
  color: #aaa
  font-size: 18px
  margin 0
  // background-color:#f5f5f5
  background: radial-gradient(white 50%, #ccc);

h1
  color: #719e40
  letter-spacing: -3px
  font-family: 'Lato', sans-serif
  font-size: 100px
  font-weight: 200
  margin: 0

.top
  min-height 60px
  overflow hidden
  position relative
  z-index 10
  background-color:rgba(255,255,255,1)

.tit-top
  position absolute
  left 0
  color:#EB3288;
  height 100%
  font-size:4vh
  padding 2vh

.ajuste
  width:100%
  padding:0px
  margin:0px
  overflow:hidden

.menu ul
  margin:0px
  padding:0px
  list-style:none

.menu ul li
  padding:0px
  margin:0px

.btn-menu
  display:block
  padding:2vh 2.5vh

.btn1
  position relative
  border none
  border-radius 1px 4px 1px 4px
  color white
  font-weight bold
  border-bottom 4px solid #2C8C92
  border-right 4px solid #2C8C92
  font-size 16px
  padding 15px 40px
  background-color #3AB0B8

.btn1:hover
  background-color #48C3CB
  border-bottom 2px solid #2C8C92
  border-right 2px solid #2C8C92
  border-radius 1px 2px 1px 2px

.cont-btn-login
  position absolute
  height 100%
  right 0
  background-color #EB3288
  color:white;
  padding 2.8vh 4vh

.name
  font-weight bold

.btn-login
  border none
  border-radius 0.1vh 0.5vh 0.1vh 0.5vh
  color white
  font-weight bold
  border-bottom 0.5vh solid #2C8C92
  border-right 0.5vh solid #2C8C92
  font-size 2.2vh
  padding 2vh 3vh
  background-color #3AB0B8

.btn-login:hover
  background-color #48C3CB
  border-bottom 0.4vh solid #2C8C92
  border-right 0.4vh solid #2C8C92
  border-radius 0.2vh 0.4vh 0.2vh 0.4vh

.cont-content
  box-shadow inset 0vh 0.2vh 1vh rgba(0,0,0,0.1)
  padding 0px
  margin 0px

.btn1:active
  box-shadow inset 0px 0px 30px rgba(0,0,0,0.15)

.cont-btn1
  height:60px;